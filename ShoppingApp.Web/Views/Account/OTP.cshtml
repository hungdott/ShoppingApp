@model ShoppingApp.Web.Models.OTPString
@using BotDetect.Web.Mvc

@{
    ViewBag.Title = "OTP";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="register">
    @using (Html.BeginForm("OTP", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "error" })
       
        <div class="register-top-grid">
            <h3>Nhập mã OTP đã được gửi tới email đăng nhập</h3>
            <div class="mation">
                <span>OTP<label>*</label></span>
                @Html.TextBoxFor(model => model.OTP)
               
               

                @{
                    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
                }
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")
            </div>
            <div class="clearfix"> </div>
            
        </div>
       
        <div class="clearfix"> </div>
        <div class="register-but">
           
                <input type="submit" value="submit">
                <div class="clearfix"> </div>
           
        </div>
    }
 
    
</div>
