@model ShoppingApp.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "error" })
        if (ViewData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Chúc mừng bạn! </strong> đăng ký thành công.
                <br />vui lòng click vào <a href="/dang-nhap.html">đây</a> để đăng nhập hoặc vào email và làm theo hướng dẫn.
            </div>
        }
        <div class="register-top-grid">
            <h3>Thông tin cá nhân</h3>
            <div class="mation">
                <span>Họ Tên<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)
               
                <span>Email Address<label>*</label></span>
                @Html.TextBoxFor(model => model.Email)
                <span>Địa chỉ</span>
                @Html.TextBoxFor(model => model.Address)
                <span>Số điện thoại<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)


                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(model => model.PassWord)

                @{
                    MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
                }
                @Html.Captcha(registerCaptcha)
                @Html.TextBox("CaptchaCode")
            </div>
            <div class="clearfix"> </div>
            
        </div>
       
        <div class="clearfix"> </div>
        <div class="register-but">
           
                <input type="submit" value="submit">
                <div class="clearfix"> </div>
           
        </div>
    }
 
    
</div>
